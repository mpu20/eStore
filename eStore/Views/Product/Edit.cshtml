@model Product
@{
    ViewData["Title"] = "Update product";
}

@if (TempData["error"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["error"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
            <h3 class="text-center mb-4">Update product</h3>
            <form method="post" asp-action="Edit">
                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="Product ID" asp-for="ProductId" hidden />
                </div>

                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="Category ID" asp-for="CategoryId" />
                </div>

                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="Product Name" asp-for="ProductName" />
                </div>

                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="Weight" asp-for="Weight" />
                </div>

                <div class="form-outline mb-4">
                    <input type="number" min="0" step=".01" class="form-control" placeholder="Price" asp-for="UnitPrice" />
                </div>

                <div class="form-outline mb-4">
                    <input type="number" min="0" class="form-control" placeholder="Units In Stock" asp-for="UnitsInStock" />
                </div>

                <div class="text-center mb-2">
                    <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Update product</button>
                </div>
            </form>
        </div>
    </div>
</div>


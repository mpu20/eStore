@model eStore.Models.Member

@{
    ViewData["Title"] = "Register";
}
@if (TempData["error"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["error"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
            <h3 class="text-center mb-4">Want to be a member?</h3>
            <form method="post">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" class="form-control" placeholder="Email address" asp-for="Email" required/>
                </div>

                <!-- Company Name input -->
                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="Company Name" asp-for="CompanyName" required />
                </div>

                <!-- City input -->
                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="City" asp-for="City" required />
                </div>

                <!-- Country input -->
                <div class="form-outline mb-4">
                    <input type="text" class="form-control" placeholder="Country" asp-for="Country" required />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" required />
                </div>

                <!-- Confirm Password input -->
                <div class="form-outline mb-4">
                    <input type="password" class="form-control" placeholder="Confirm Password" name="confirmPassword" required />
                </div>

                <!-- Submit button -->
                <div class="text-center mb-2">
                    <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Register</button>
                </div>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Have an account? <a asp-action="Login">Log in</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

